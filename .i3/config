set $mod Mod4

# Autostart applications
exec --no-startup-id nm-applet
exec --no-startup-id volumeicon
exec --no-startup-id unclutter
exec --no-startup-id xcompmgr
exec feh --bg-scale ~/Pictures/Wallpapers/background.png

# New window default borders
new_window 1pixel
new_float 1pixel

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below. ISO 10646 = Unicode
font -misc-fixed-medium-r-normal--13-120-75-75-C-70-iso10646-1
# The font above is very space-efficient, that is, it looks good, sharp and
# clear in small sizes. However, if you need a lot of unicode glyphs or
# right-to-left text rendering, you should instead use pango for rendering and
# chose a FreeType font, such as:
# font pango:DejaVu Sans Mono 10

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# start a terminal
bindsym $mod+Shift+t exec i3-sensible-terminal

# kill focused window
bindsym $mod+Shift+q kill

# start dmenu (a program launcher)
bindsym $mod+d exec dmenu_run_aliases -h 18 -p "Actuate" -nb "#000000" -nf "#FFFFFF" -sf "#adb8bf" -sb "#49176d"

# Back and forth
workspace_auto_back_and_forth yes

# There also is the (new) i3-dmenu-desktop which only displays applications
# shipping a .desktop file. It is a wrapper around dmenu, so you need that
# installed.
# bindsym $mod+d exec --no-startup-id i3-dmenu-desktop

# screenshot shortcuts
bindsym Print exec import -window root ~/Desktop/Captures/$(date +%s%N).png
bindsym Mod5+Print exec import ~/Desktop/Captures/$(date +%s%N).png

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# split in horizontal orientation
bindsym $mod+percent split h

# split in vertical orientation
bindsym $mod+v split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change border style
bindsym $mod+b border toggle

# change de default border style to 1px
new_window 1pixel

# lock the screen
bindsym $mod+Shift+s exec i3lock -i  ~/Pictures/Wallpapers/background.png

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# focus the parent container
bindsym $mod+a focus parent

# focus the child container
#bindsym $mod+d focus child

# workspaces names
workspace "1: Main" output LVDS
workspace "2: Web" output LVDS
workspace "3: Media" output LVDS
workspace "4: CAO" output LVDS
workspace "5: Dev" output LVDS
workspace "6: Admin" output LVDS
workspace "7: Misc" output LVDS
workspace "8: Misc" output LVDS
workspace "9: Music" output LVDS
workspace "0: Second Screen" output VGA-0

# switch to workspace
bindsym $mod+1 workspace "1: Main"
bindsym $mod+2 workspace "2: Web"
bindsym $mod+3 workspace "3: Media"
bindsym $mod+4 workspace "4: CAO"
bindsym $mod+5 workspace "5: Dev"
bindsym $mod+6 workspace "6: Admin"
bindsym $mod+7 workspace "7: Misc"
bindsym $mod+8 workspace "8: Misc"
bindsym $mod+9 workspace "9: Music"
bindsym $mod+0 workspace "0: Second Screen"

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace "1: Main"
bindsym $mod+Shift+2 move container to workspace "2: Web"
bindsym $mod+Shift+3 move container to workspace "3: Media"
bindsym $mod+Shift+4 move container to workspace "4: CAO"
bindsym $mod+Shift+5 move container to workspace "5: Dev"
bindsym $mod+Shift+6 move container to workspace "6: Admin"
bindsym $mod+Shift+7 move container to workspace "7: Misc"
bindsym $mod+Shift+8 move container to workspace "8: Misc"
bindsym $mod+Shift+9 move container to workspace "9: Music"
bindsym $mod+Shift+0 move container to workspace "0: Second Screen"

# color theme
client.focused          #49176d #654da0 #f3f8fa #1e64a1 
client.focused_inactive #49176d #654da0 #adb8bf #1e64a1 
client.unfocused        #adb8bf #f3f8fa #49176d #292d2e
#client.urgent           #2f343a #900000 #ffffff #900000

# remove the window decoration from some applications
for_window [class="^Firefox$"   title=" - Mozilla Firefox$"]                border none
for_window [class="^Gimp$"      title="^GNU Image Manipulation Program$"]   border none
for_window [class="feh*"        title ="feh*"]                              floating enable
for_window [class="Rhythmbox"   title ="Rhythmbox*"]                        border none

# assign cerain applications to their own workspaces
assign [class="^Firefox$" window_role="browser"] "2: Web"
assign [class="^Gimp$"] "3: Media"
assign [class="^Rhythmbox$"] "9: Music"

# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode
        bindsym j resize shrink width 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym l resize shrink height 10 px or 10 ppt
        bindsym semicolon resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
        status_command 	i3status
	position	top
	workspace_buttons	yes

	colors {
		focused_workspace #49176d #654da0 #f3f8fa
		active_workspace #adb8bf #f3f8fa #49176d #292d2e
		statusline #f3f8fa
	}
}
